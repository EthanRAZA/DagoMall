        .info-section h2 {
            margin-top: 0;
            font-size: 1.5em;
            border-bottom: 2px solid #4267b2;
            padding-bottom: 10px;
        }

        .info-section ul {
            list-style-type: none;
            padding: 0;
        }

        .info-section ul li {
            display: flex;
            align-items: center;
            padding: 10px 0;
            border-bottom: 1px solid #e9ebee;
        }

        .info-section ul li:last-child {
            border-bottom: none;
        }

        .info-section ul li img {
            width: 30px;
            height: 30px;
            margin-right: 15px;
        }

        @media (max-width: 768px) {
            .info-section {
                margin: 10px;
            }

            .profile-header img {
                width: 100px;
                height: 100px;
            }
        }
